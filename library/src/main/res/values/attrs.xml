<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ATTRS for LoadingCircleView -->
    <declare-styleable name="LoadingCircleView">
        <attr name="loading_circle_radius" format="dimension"/>
        <attr name="loading_circle_border_size" format="dimension"/>
        <attr name="loading_circle_border_color" format="color"/>
    </declare-styleable>

    <!-- ATTRS for LoadingDotView -->
    <declare-styleable name="LoadingDotView">
        <attr name="loading_dot_radius" format="dimension"/>
        <attr name="loading_dot_color" format="color"/>
        <attr name="loading_dot_distance" format="dimension"/>
    </declare-styleable>

    <!-- ATTRS for ProgressCircleView -->
    <declare-styleable name="progress_circle_view">
        <attr name="progress_circle_percent" format="integer"/>
        <attr name="progress_circle_radius" format="dimension"/>
        <attr name="progress_circle_name_size" format="dimension"/>
        <attr name="progress_circle_value_size" format="dimension"/>
        <attr name="progress_circle_size_progress" format="dimension"/>
        <attr name="progress_circle_color_background" format="color"/>
        <attr name="progress_circle_color_progress" format="color"/>
        <attr name="progress_circle_color_name" format="color"/>
        <attr name="progress_circle_color_value" format="color"/>
        <attr name="progress_circle_color_background_progress" format="color"/>
        <attr name="progress_circle_text_name" format="string"/>
        <attr name="progress_circle_has_name" format="boolean"/>
    </declare-styleable>
</resources>